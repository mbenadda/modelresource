{
  "compilerOptions": {
    "allowJs": false,
    "alwaysStrict": true,
    "module": "es2015",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strictNullChecks": true,
    "target": "es6"
  },
  "files": [
    "src/index.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/*.spec.js",
    "**/*.spec.ts"
  ]
}